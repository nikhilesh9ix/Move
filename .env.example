# Environment variables for AI 'Why Did This Move?' Engine
NEWSAPI_KEY=your_newsapi_key_here
OPENROUTER_API_KEY=your_openrouter_key_here

# Optional: Specific model to use
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# News source preferences (comma-separated)
NEWS_SOURCES=bloomberg,reuters,cnbc,wsj

# Analysis settings
MIN_PRICE_CHANGE_THRESHOLD=2.0  # Minimum % change to trigger analysis
MIN_VOLUME_SPIKE_THRESHOLD=1.5  # Volume multiplier vs average
LOOKBACK_DAYS=30  # Days to calculate moving averages

# API settings
API_HOST=0.0.0.0
API_PORT=8000
